{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run task with reading from input.txt",
            "type": "shell",
            "command": "cd ${fileDirname} && g++ -O2 -std=c++14 ${file} -o main && ${fileDirname}/main < ${fileDirname}/input.txt",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        }
    ]
}